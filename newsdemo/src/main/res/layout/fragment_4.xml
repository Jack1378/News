<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#56A1DF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#56A1DF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ya" />

        <ImageView
            android:id="@+id/Image_WeiXin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weixin_allshare_normal" />

        <ImageView
            android:id="@+id/Image_QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/a_y" />

        <ImageView
            android:id="@+id/Image_microblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ach" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#56A1DF"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="更多登录方式>"
        android:textColor="#FAFAFA"
        android:textSize="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#56A1DF"/>
</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="20dp" />
    <RadioGroup
        android:id="@+id/radioGroup_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RadioButton_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/a1q"
            android:gravity="center"
            android:text="收藏"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/RadioButton_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/adt"
            android:gravity="center"
            android:text="历史"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/RadioButton_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/yejian"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:text="夜间"
            android:textSize="20dp" />

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#E8E8E8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_information_inform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消息通知 >"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#E8E8E8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_headline_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="头条商城 "
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_Jingdong_special_supply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="京东特供"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#E8E8E8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_disclose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我要爆料"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_user_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户反馈"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_system_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统设置"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E8E8E8" />

</LinearLayout>